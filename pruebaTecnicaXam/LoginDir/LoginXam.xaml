<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Sesión"
             x:Class="pruebaTecnicaXam.LoginDir.LoginXam">
    <ContentPage.Content>
        <StackLayout Padding="20" Margin="0,50,0,0" Spacing="30">
            <Label Text="Introduce tu nombre de usuario"/>
            <Entry x:Name="txtUsername" Placeholder="Usuario"/>
            <Entry x:Name="txtUserpass" IsPassword="true" Placeholder="Contraseña"/>
            <Button Text="Iniciar Sesión" Clicked="btnLoginClick" BackgroundColor="AliceBlue" />
            <Label x:Name="lblAlert" TextColor="Red"/>
            <Label Text="Usuario:Usuario1;Contraseña:Usu(case sensitive)"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
